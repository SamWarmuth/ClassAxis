!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %link{:href => "css/style.css", :media => "all", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "css/jqui.css", :media => "all", :rel => "stylesheet", :type => "text/css"}/
    %script{:src => "js/jquery-1.4.2.min.js", :type => "text/javascript"}
    %script{:src => "js/jquery-ui-1.8.4.custom.min.js", :type => "text/javascript"}
    %title Class Axis - Login
  %body
    #login-wrapper
      .box-header.login
        Log In to Class Axis
      .box
        -if params[:error] && params[:error] == "incorrect"
          .notification.error
            %span.strong Error:
            Email or password incorrect.
        -if params[:success] && params[:success] == "created"
          .notification.success
            %span.strong Success!
            Your account has been created. Please log in.
        %form.login{:action => "/login", :method => "post"}
          .row
            %label{:style => "display: inline-block; width: 80px"} Email
            %input{:type => "text", :name => "email"}
          .row
            %label{:style => "display: inline-block; width: 80px"} Password
            %input{:type => "password", :name => "password"}
          .row.tr
            %input.new-button{:style => "height: 30px; width: 100px;", :type => "submit", :value => "Login"}
            
      .colored-box.green{:style => "text-align: center; font-size: 1.3em; margin-bottom: 0;"}
        %a.name{:href => "/signup", :style => "display: block;"} Create a New Account
