!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %link{:href => "css/style.css", :media => "all", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "css/jqui.css", :media => "all", :rel => "stylesheet", :type => "text/css"}/
    %script{:src => "js/jquery-1.4.2.min.js", :type => "text/javascript"}
    %script{:src => "js/jquery-ui-1.8.4.custom.min.js", :type => "text/javascript"}
    %title Class Axis - Sign Up
  %body
    #login-wrapper
      .box-header.login
        Sign Up For Class Axis
        %small
          %a{:style => "float: right", :href => "/login"} Back To Login
      .box
        -if params[:error]
          -if params[:error] == "email"
            .notification.error
              %span.strong Error:
              User with this email already exists.
          -if params[:error] == "name"
            .notification.error
              %span.strong Error:
              User with this name already exists.
          -if params[:error] == "password"
            .notification.error
              %span.strong Error:
              Passwords didn't match.
          -if params[:error] == "empty"
            .notification.error
              %span.strong Error:
              Please fill in all fields
        %form.login{:action => "/signup", :method => "post"}
          .row
            %label Name
            %input{:type => "text", :name => "name"}
          .row
            %label Email
            %input{:type => "text", :name => "email"}
          .row
            %label Password
            %input{:type => "password", :name => "password"}
          .row
            %label Repeat Password
            %input{:type => "password", :name => "password2"}
          .row.tr
            %input.button{:type => "submit", :value => "Create Account"}

